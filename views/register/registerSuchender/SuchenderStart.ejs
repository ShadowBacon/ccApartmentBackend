<%- include ("../../_partial/_header"); %>

<div class="row justify-content-center">
    <div class="col-md-auto">
        <h1 style="color:#FFA500"> Registrierung - Angaben zu dir </h1>
        <div class="p-2"/>
    </div>
</div>

<div class="container ">
    <form method="POST" action="/register/SReg">
        <div class="d-flex p-2" style="background-color:#FFA500; border-radius: 10px;">
            <div class="col-4 offset-1 justify-content-center">
                <div class="form-group row my-1 mr-2">
                    <div class="col">
                        <input type="Vorname" class="form-control" id="SVorname" placeholder="SVorname"
                               name="RegSVorname">
                    </div>
                </div>
                <div class="form-group row my-1 mr-2">
                    <div class="col">
                        <input type="Nachname" class="form-control" id="SNachname" placeholder="SNachname"
                               name="RegSNachname">
                    </div>
                </div>
                <div class="form-group row my-1 mr-2">
                    <div class="col">
                        <input type="Alter" class="form-control" id="SAlter" placeholder="Alter" name="SAlter">
                    </div>
                </div>
                <select class="form-select" id="inlineFormCustomSelectPref" name="SGender">
                    <option selected>Geschlecht</option>
                    <option value="1">Männlich</option>
                    <option value="2">Weiblich</option>
                    <option value="3">Divers</option>
                </select>
                <div class="form-inline my-1 mr-2">
                    <select class="form-select" id="inlineFormCustomSelectPref" name="SRaucher">
                        <option selected>Raucher</option>
                        <option value="1">Nichtraucher</option>
                    </select>
                </div>
                <div class="form-inline my-1 mr-2">
                    <select class="form-select" id="inlineFormCustomSelectPref" name="SVegetarier">
                        <option selected>Ernährung</option>
                        <option value="1">Vegetarisch</option>
                        <option value="2">Vegan</option>
                        <option value="3">Omnivor</option>
                    </select>
                </div>
                <div class="form-inline my-1 mr-2">
                    <select class="form-select" id="inlineFormCustomSelectPref" name="SVeganer">
                        <option selected>Tätigkeiten</option>
                        <option value="1">Student</option>
                        <option value="2">Schüler</option>
                        <option value="3">Azubi</option>
                        <option value="4">Praktikant</option>
                        <option value="5">Arbeitslos</option>
                        <option value="6">Berufstätig</option>
                    </select>
                </div>
                <div class="form-inline my-1 mr-2">
                    <select class="form-select" id="inlineFormCustomSelectPref" name="SPolitges">
                        <option selected>Politische Gesinnung</option>
                        <option value="1">Links</option>
                        <option value="2">Rechts</option>
                        <option value="3">Konservativ</option>
                        <option value="4">Grün</option>
                        <option value="5">Liberal</option>
                        <option value="6">Unpolitisch</option>
                    </select>
                </div>
            </div>
            <div class="col-2 offset-2 justify-content-center ">
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sbs">
                    <label class="form-check-label" for="flexCheckDefault"> Brettspiele </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Svs">
                    <label class="form-check-label" for="flexCheckDefault"> Videospiele </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sls">
                    <label class="form-check-label" for="flexCheckDefault"> Lesen </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sst">
                    <label class="form-check-label" for="flexCheckDefault"> Sport </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Srn">
                    <label class="form-check-label" for="flexCheckDefault"> Reisen </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sfg">
                    <label class="form-check-label" for="flexCheckDefault"> Feiern gehen </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Smz">
                    <label class="form-check-label" for="flexCheckDefault"> Musizieren </label></div>
            </div>

            <div class="col-2  justify-content-center ">

                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sp">
                    <label class="form-check-label" for="flexCheckDefault"> Politik </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sk">
                    <label class="form-check-label" for="flexCheckDefault"> Kultur </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sn">
                    <label class="form-check-label" for="flexCheckDefault"> Naturwissenschaft </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="St">
                    <label class="form-check-label" for="flexCheckDefault"> Technik </label></div>
                <div class="form-inline my-1 mr-2" style="color:white"><input class="form-check-input" type="checkbox"
                                                                              value="" id="flexCheckDefault" name="Sp">
                    <label class="form-check-label" for="flexCheckDefault"> Sport </label></div>
            </div>
        </div>
        <div class="p-2"/>
        <div class="row">
            <div class="p-1"/>
            <a href="/register">
                <button class="col-1 offset-3 btn" style="background-color:#FFA500; color:white">Zurück</button>
            </a>
            <a href="/register/SRegEnd">
                <button type="submit" class="col-1 offset-4 btn" style="background-color:#FFA500; color:white">Weiter</button>
            </a>
        </div>
    </form>
</div>




<%- include ("../../_partial/_footer"); %>